<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btm1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primarymain">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_back"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text="Settings"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />
        </RelativeLayout>
        <TextView android:textSize="@dimen/_10sdp" android:textColor="@color/gray_txt" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/_30sdp" android:layout_marginTop="@dimen/_15sdp" android:text="Normal Setting" android:layout_centerHorizontal="true" android:fontFamily="@font/poppins_semibold"/>
        <RelativeLayout android:id="@+id/rl_share" android:layout_width="match_parent" android:layout_height="@dimen/_35sdp" android:layout_marginTop="@dimen/_5sdp" android:layout_marginRight="@dimen/_30sdp">
            <ImageView android:id="@+id/iv_share" android:layout_width="@dimen/_22sdp" android:layout_height="@dimen/_22sdp" android:layout_marginLeft="@dimen/_30sdp" android:src="@drawable/ic_share" android:layout_centerVertical="true"/>
            <TextView android:textSize="@dimen/_12sdp" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/_25sdp" android:text="Share" android:layout_centerVertical="true" android:fontFamily="@font/poppins_semibold" android:layout_toEndOf="@+id/iv_share"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rl_rateUs" android:layout_width="match_parent" android:layout_height="@dimen/_35sdp" android:layout_marginTop="@dimen/_5sdp" android:layout_marginRight="@dimen/_30sdp">
            <ImageView android:id="@+id/iv_rateUs" android:layout_width="@dimen/_22sdp" android:layout_height="@dimen/_22sdp" android:layout_marginLeft="@dimen/_30sdp" android:src="@drawable/ic_rate_app" android:layout_centerVertical="true"/>
            <TextView android:textSize="@dimen/_12sdp" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/_25sdp" android:text="Rate app" android:layout_centerVertical="true" android:fontFamily="@font/poppins_semibold" android:layout_toEndOf="@+id/iv_rateUs"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/rl_privacy" android:layout_width="match_parent" android:layout_height="@dimen/_35sdp" android:layout_marginTop="@dimen/_5sdp" android:layout_marginRight="@dimen/_30sdp">
            <ImageView android:id="@+id/iv_privacy" android:layout_width="@dimen/_22sdp" android:layout_height="@dimen/_22sdp" android:layout_marginLeft="@dimen/_30sdp" android:src="@drawable/ic_privacy_policy" android:layout_centerVertical="true"/>
            <TextView android:textSize="@dimen/_12sdp" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/_25sdp" android:text="Privacy Policy" android:layout_centerVertical="true" android:fontFamily="@font/poppins_semibold" android:layout_toEndOf="@+id/iv_privacy"/>
        </RelativeLayout>
        <TextView android:textSize="@dimen/_10sdp" android:textColor="@color/gray_txt" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/_30sdp" android:layout_marginTop="@dimen/_30sdp" android:text="About" android:layout_centerHorizontal="true" android:fontFamily="@font/poppins_semibold"/>
        <RelativeLayout android:id="@+id/rl_version" android:layout_width="match_parent" android:layout_height="@dimen/_35sdp" android:layout_marginTop="@dimen/_5sdp" android:layout_marginRight="@dimen/_30sdp">
            <ImageView android:id="@+id/iv_virsion" android:layout_width="@dimen/_22sdp" android:layout_height="@dimen/_22sdp" android:layout_marginLeft="@dimen/_30sdp" android:src="@drawable/ic_version" android:layout_centerVertical="true"/>
            <TextView android:textSize="@dimen/_12sdp" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/_25sdp" android:text="Version" android:layout_centerVertical="true" android:fontFamily="@font/poppins_semibold" android:layout_toEndOf="@+id/iv_virsion"/>

            <TextView
                android:id="@+id/txt_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:fontFamily="@font/poppins_semibold"
                android:text="1.0"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/btm1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_alignParentBottom="true">



    </RelativeLayout>

</RelativeLayout>
