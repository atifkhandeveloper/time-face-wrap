            <ImageView android:textColor="@android:color/white" android:id="@+id/switchCamera_ImageView" android:padding="3dp" android:layout_width="@dimen/_45sdp" android:layout_height="@dimen/_45sdp" android:layout_marginBottom="@dimen/_40sdp" android:src="@drawable/ic_rotate" android:layout_marginEnd="@dimen/_20sdp" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
            <ImageView android:textColor="@android:color/white" android:id="@+id/toogleTorch_ImageView" android:background="@drawable/ic_flash_off_black_24dp" android:padding="@dimen/_5sdp" android:visibility="invisible" android:layout_width="@dimen/_40sdp" android:layout_height="@dimen/_40sdp" android:layout_marginBottom="@dimen/_15sdp" android:onClick="toggleTorch" android:layout_marginEnd="@dimen/_20sdp" app:layout_constraintBottom_toTopOf="@+id/switchCamera_ImageView" app:layout_constraintEnd_toEndOf="parent"/>
            <RelativeLayout android:gravity="bottom" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/relativeLayout" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="parent">
                <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/_30sdp" android:layout_centerHorizontal="true" android:dividerPadding="8dp">
                    <ImageView android:gravity="center" android:id="@+id/capture_video_Button" android:background="@drawable/btn_camera" android:layout_width="@dimen/_60sdp" android:layout_height="@dimen/_60sdp" android:layout_margin="5dp"/>
                </LinearLayout>
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </android.widget.RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/llBanner" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
