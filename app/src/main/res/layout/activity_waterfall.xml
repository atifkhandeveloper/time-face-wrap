                <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/_30sdp" android:divider="?android:attr/dividerVertical" android:layout_centerHorizontal="true" android:dividerPadding="8dp">
                    <ImageView android:gravity="center" android:id="@+id/stop_capture_video_Button" android:background="@drawable/btn_pause" android:layout_width="@dimen/_60sdp" android:layout_height="@dimen/_60sdp" android:layout_margin="@dimen/_5sdp"/>
                </LinearLayout>
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
